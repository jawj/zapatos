{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "noUnusedLocals": true,
    "paths": {
      "*": [
        "src/typings/*"
      ]
    }
  },
}
